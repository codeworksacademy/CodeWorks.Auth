{
  "info": {
    "name": "CodeWorks.Auth MVC Sample",
    "_postman_id": "9fb99d5e-bfb8-49dd-8331-7f445398a6f9",
    "description": "Quick test flow for MVC Startup sample: register, login, refresh token, and authorized account endpoint.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@example.com\",\n  \"password\": \"Password123!\",\n  \"name\": \"Demo User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var json = pm.response.json();",
                  "if (json.accessToken) pm.environment.set('accessToken', json.accessToken);",
                  "if (json.refreshToken) pm.environment.set('refreshToken', json.refreshToken);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
